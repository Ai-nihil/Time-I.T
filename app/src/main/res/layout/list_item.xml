<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/listItemTextViewStatusCode"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="#000000"
                android:textSize="60sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/listItemTextViewDateDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DateDay"
                    android:textColor="#000000"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/listItemTextViewDateTimeClockIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DateTime"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/listItemTextViewDateTimeClockInHyphen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/listItemTextViewDateTimeClockOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-DateTime"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/listItemTextViewStatusClockIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On-Time"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/listItemTextViewDateTimeClockOutHyphen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/listItemTextViewStatusClockOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-DateTime"
                        android:textStyle="bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>